<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_blue_grey_500"
    android:orientation="vertical"
    android:layout_margin="4dp"
    >

    <ImageView
        android:id="@+id/item_sale_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/item_sale_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_for_buttons"
            android:padding="8dp"
            android:src="@drawable/ic_star_grey600_24dp"/>

        <ImageView
            android:id="@+id/item_sale_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_for_buttons"
            android:padding="8dp"
            android:src="@drawable/ic_share_grey600_24dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_sale_buy"
            android:src="@drawable/ic_shopping_cart_grey600_24dp"
            android:padding="8dp"
            android:background="@drawable/background_for_buttons"/>
    </LinearLayout>
</LinearLayout>